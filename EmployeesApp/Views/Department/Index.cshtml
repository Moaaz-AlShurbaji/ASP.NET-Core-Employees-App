@model IEnumerable<Department>

<h2>Departments</h2>
@if(TempData["added"] != null)
    {
        <p class="alert alert-success">@TempData["added"]</p>
    }
    else if(TempData["removed"] != null)
    {
    <p class="alert alert-danger">@TempData["removed"]</p>
    }

<a class="btn btn-outline-primary" asp-controller="Department" asp-action="Create">Add New Department</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentAbbr)
            </th>
            <th>
                Operations
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentAbbr)
                </td>
                
                <td>
                    <a class="btn btn-outline-success" asp-controller="Department" asp-action="Edit" asp-route-id="@item.DepartmentID">Edit</a> |
                    <a class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this employee?');" asp-controller="Department" asp-action="Delete" asp-route-id="@item.DepartmentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


