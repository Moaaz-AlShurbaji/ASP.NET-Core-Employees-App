@model IEnumerable<Employee>

<h1>All Employees</h1>
@if(TempData["added"] != null)
{
    <p class="alert alert-success">@TempData["added"]</p>
}
else if (TempData["removed"] != null)
{
    <p class="alert alert-danger">@TempData["removed"]</p>
}
<hr />
@using (Html.BeginForm())
{
    <div class="input-group">
        @Html.TextBox("SearchByName", null, new{ @class="form-control", @placeholder="Search by employee name" })
        <input class="btn btn-outline-success" type="submit" value="Search">
        <a class="btn btn-outline-primary" asp-controller="Employee" asp-action="Create">Add New Employee</a>
    </div>
}
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HiringDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrossSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NetSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                Operations
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HiringDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GrossSalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NetSalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                </td>
                <td>
                    <a class="btn btn-outline-success" asp-controller="Employee" asp-action="Edit" asp-route-id="@item.EmployeeID">Edit</a> |
                    <a class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this employee?');" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.EmployeeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


